                name="model_id"
                ref="fixed_asset_estimation_change.model_account_asset_change_estimation_useful_life"
            />
    <field
                name="code"
            >waction = env.ref("fixed_asset_estimation_change.account_asset_change_estimation_useful_life_action").read()[0]
